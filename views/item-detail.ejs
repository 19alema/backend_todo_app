<div class="container">
   <h4>Item Detail</h4>
   <div>
    <h5>Item Name: <span class="bold"> <%=item.name%></span></h5>
    <h5>Item Price: $<%=item.price%></h5>
    <a id="deleteBtn" data-id = "<%=item.id %> " href="" class="btn">delete</a>
   </div>
</div>

<script>
  let deleteBtn = document.getElementById("deleteBtn")
  deleteBtn.onclick= function(e) {
    const id = deleteBtn.dataset.id
    const endpoint = `items/${id}`
    e.preventDefault()
    console.log("Deleted")
    fetch(endpoint, {method:"DELETE"}).then(() =>{}).catch(err => console.log(err))
  }
</script>
</body>
